---
// src/pages/nuestras-unidades.astro
import { getPageBySlug } from '../config/wordpress';

let pageData: any = null;

try {
    pageData = await getPageBySlug('nuestras-unidades');
} catch (error) {
    console.error('Error al cargar la página:', error);
}

// Acceder a los ACF
const vehiculos = pageData?.acf?.auto || [];
const titulo_catalogo = pageData?.acf?.titulo || '';

import Layout from '../layouts/Layout.astro';

// Obtener metadatos de Yoast SEO
const seoTitle = pageData?.yoast_head_json?.title || pageData?.title?.rendered || 'Nuestras Unidades';
const seoDescription = pageData?.yoast_head_json?.description || '';
const ogImage = pageData?.yoast_head_json?.og_image?.[0]?.url || '';
const canonical = pageData?.yoast_head_json?.canonical || '';
---

<Layout title={seoTitle} description={seoDescription} ogImage={ogImage} canonical={canonical}>
    <div class="">
        <!-- Header con imagen -->
        <div class="relative h-64 md:h-80 mb-12 overflow-hidden" data-aos="fade-up">
            <img 
                src="/hader-pages-viamed.jpg" 
                alt={pageData?.title?.rendered}
                class="absolute inset-0 w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-viamed-cyan/40"></div>
            <div class="relative z-10 flex items-center justify-center h-full">
                <h1 class="text-4xl md:text-5xl font-bold text-white px-4 text-center">
                    {pageData?.title?.rendered}
                </h1>
            </div>
        </div>

        <div class="container">
            <!-- Título de sección ACF -->
            {titulo_catalogo && (
                <div class="text-center mb-12" data-aos="fade-up">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">{titulo_catalogo}</h2>
                    <div class="w-24 h-1 bg-viamed-cyan mx-auto mt-6"></div>
                </div>
            )}

            <!-- Contenido normal de WordPress si existe -->
            {pageData?.content?.rendered && (
                <div 
                    class="bg-white rounded-xl border border-gray-100 shadow-lg p-8 md:p-12 prose prose-lg mx-auto mb-12" 
                    data-aos="fade-up"
                    set:html={pageData.content.rendered}
                />
            )}

            <!-- Grid de vehículos desde ACF -->
            {vehiculos.length > 0 && (
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {vehiculos.map((vehiculo: any, index: number) => (
                        <div 
                            class="bg-white rounded-xl border border-gray-200 shadow-lg overflow-hidden card-hover" 
                            data-aos="fade-up" 
                            data-aos-delay={index * 100}
                        >
                            <div class="relative">
                                {vehiculo.imagen && (
                                    <img 
                                        src={vehiculo.imagen.url} 
                                        alt={vehiculo.titulo} 
                                        class="w-full h-48 object-cover"
                                    />
                                )}
                                <a 
                                    href={`https://wa.me/51942727638?text=${encodeURIComponent(`Quiero más información sobre ${vehiculo.titulo}`)}`}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="absolute bottom-4 right-4 bg-green-600 hover:bg-green-700 text-white p-3 rounded-full shadow-lg transition-all duration-300 hover:scale-110"
                                    title="Consultar por WhatsApp"
                                >
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                                    </svg>
                                </a>
                            </div>
                            <div class="p-6">
                                <h3 class="text-xl text-viamed-red font-bold mb-4">
                                    {vehiculo.titulo}
                                </h3>
                                
                                <div class="mt-4 grid grid-cols-2 gap-x-4 gap-y-3 text-sm">
                                    {vehiculo.detalles?.marca && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                                            </svg>
                                            <span class="text-xs"><strong>Marca:</strong> {vehiculo.detalles.marca}</span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.modelo && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"></path>
                                            </svg>
                                            <span class="text-xs"><strong>Modelo:</strong> {vehiculo.detalles.modelo}</span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.tipo && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                                            </svg>
                                            <span class="text-xs"><strong>Tipo:</strong> {vehiculo.detalles.tipo}</span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.capacidad_pasajeros && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                                            </svg>
                                            <span class="text-xs"><strong>Capacidad:</strong> {vehiculo.detalles.capacidad_pasajeros}</span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.capacidad_asientos && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M7 13c1.66 0 3-1.34 3-3S8.66 7 7 7s-3 1.34-3 3 1.34 3 3 3zm12-6h-8v7H3v5h1c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h1v-5c0-2.21-1.79-4-4-4z"/>
                                            </svg>
                                            <span class="text-xs"><strong>Asientos:</strong> {vehiculo.detalles.capacidad_asientos}</span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.capacidad_maletas && (
                                        <div class="flex items-start gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M17 6h-2V3c0-.55-.45-1-1-1h-4c-.55 0-1 .45-1 1v3H7c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2 0 .55.45 1 1 1s1-.45 1-1h6c0 .55.45 1 1 1s1-.45 1-1c1.1 0 2-.9 2-2V8c0-1.1-.9-2-2-2zM9.5 3.5h5V6h-5V3.5zm7.5 11.5H7V9h10v6z"/>
                                            </svg>
                                            <span class="text-xs"><strong>Maletas:</strong> <span set:html={vehiculo.detalles.capacidad_maletas} /></span>
                                        </div>
                                    )}
                                    {vehiculo.detalles?.potencia && (
                                        <div class="flex items-center gap-2">
                                            <svg class="w-4 h-4 text-gray-700 shrink-0" fill="currentColor" viewBox="0 0 24 24">
                                                <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                                            </svg>
                                            <span class="text-xs"><strong>Potencia:</strong> {vehiculo.detalles.potencia}</span>
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )}

            <!-- Mensaje si no hay vehículos en ACF -->
            {vehiculos.length === 0 && !pageData?.content?.rendered && (
                <div class="text-center py-12">
                    <p class="text-gray-600 text-lg">No hay unidades disponibles en este momento.</p>
                </div>
            )}
        </div>
    </div>
</Layout>

<style>
    /* Estilos para el contenido de WordPress */
    :global(.prose) {
        color: #374151;
    }
    
    :global(.prose h2) {
        font-size: 2rem;
        border-bottom: 2px solid #0096a3;
        padding-bottom: 0.5rem;
        color: #1f2937;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1rem;
    }

    :global(.prose h3) {
        font-size: 1.5rem;
        color: #1f2937;
        font-weight: 700;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
    }

    :global(.prose p) {
        margin-bottom: 1.5rem;
        line-height: 1.8;
    }

    :global(.prose a) {
        color: #0096a3;
        text-decoration: none;
        transition: color 0.3s;
    }

    :global(.prose a:hover) {
        color: #ec1c24;
    }
</style>
