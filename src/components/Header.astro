---
// src/components/Header.astro
interface MenuItem {
    ID: number;
    title: string;
    url: string;
    menu_order: number;
    slug?: string;
}

let menuItems: MenuItem[] = [];

try {
    const response = await fetch('http://web.viamed/wp-json/vap/v1/menu/menu-1');
    if (response.ok) {
        const rawItems = await response.json();
        // Convertir URLs de WordPress a rutas de Astro
        menuItems = rawItems.map((item: MenuItem) => {
            // Extraer el slug de la URL de WordPress
            const urlObj = new URL(item.url);
            const pathname = urlObj.pathname;
            const slug = pathname.split('/').filter(Boolean).pop() || '';
            
            // Si es la home, usar "/"
            const astroUrl = slug === '' || item.url.includes('web.viamed') && pathname === '/' 
                ? '/' 
                : `/${slug}`;
            
            return {
                ...item,
                url: astroUrl,
                slug: slug
            };
        });
    }
} catch (error) {
    console.error('Error al cargar el menú:', error);
}
